<%- include("partials/header"); -%>

      <div class="brand_color">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="titlepage">
                        <h2><%=hotel%></h2>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- contact -->
    <div class="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p><%=error%></p>
                    <form class="main_form" method=post action="/hotel/<%=hotel%>">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                <input class="form-control" name="name" placeholder="Your name" type="text" name="Your Name">
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                <input class="form-control" name="email" placeholder="Email" type="text" name="Email">
                            </div>
                            <div class=" col-md-12">
                                <input class="form-control" name="phone" placeholder="Phone" type="text" name="Phone">
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                <label >From Date</label>
                                <input class="form-control" placeholder="Any" type="date" name="from_date">
                             </div>
                             <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                <label >To Date</label>
                                <input class="form-control" placeholder="Any" type="date" name="to_date">
                             </div>
                            <div class="col-md-12">
                                <textarea class="textarea" name="message" placeholder="Message"></textarea>
                            </div>
                            <div class=" col-md-12">
                                <button class="send">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- end contact -->
<%- include("partials/footer"); -%>