pipeline{
    agent any
    tools {nodejs "Ease-Rooms"}

    stages{
            stage('Build'){
                steps{
                bat 'node app.js'
            }
        }
        stage('Compile'){
            steps{
                bat 'npm install'
                bat 'npm i package.json'
            }
        }

        stage('Testing'){
            steps{
                        bat 'npm test'
            }
        }
        stage('Deployment'){
            steps{
                        bat 'node app.js'
            }
        }
    }
}